<div class="bg-white rounded-lg shadow mb-6">
  <div class="flex justify-between items-center p-6 border-b border-gray-200">
    <h2 class="text-lg font-semibold text-gray-900">Registered Patients</h2>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full table-auto">
      <thead class="bg-blue-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-blue-600 uppercase tracking-wider">
            Name
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-blue-600 uppercase tracking-wider">
            Gender
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-blue-600 uppercase tracking-wider">
            Age
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-blue-600 uppercase tracking-wider">
            Contact
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-blue-600 uppercase tracking-wider">
            Health Issue
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-semibold text-blue-600 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @patients.each_with_index do |patient, index| %>
          <tr class="<%= index.even? ? 'bg-gray-50' : 'bg-white' %> hover:bg-blue-50 transition duration-200">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= patient.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= patient.gender %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= patient.age %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= patient.contact %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= patient.health_issue %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-500">
              <%= link_to 'Detail', patient_path(patient), class: 'text-blue-500 hover:underline' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="flex justify-between items-center p-6 border-t border-gray-200">
    <%= link_to "Back", root_path, class: "text-blue-900" %>
    <div class="pagination text-blue-500 hover:text-blue-600">
      <%= paginate @patients %>
    </div>
  </div>
</div>
